{
  "name": "kegnode",
  "version": "0.1.0",
  "private": true,
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "build": "npm-run-all clean transpile",
    "clean": "rimraf dist-server",
    "dev": "NODE_ENV=development npm-run-all build server",
    "migrate:up": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "prod": "NODE_ENV=production npm-run-all build server",
    "seeds:up": "npx sequelize-cli db:seed:all",
    "seeds:undo": "npx sequelize-cli db:seed:undo",
    "server": "nodenv ./dist-server/bin/www.js",
    "start": "npm run prod",
    "test": "jest",
    "transpile": "babel ./server --out-dir dist-server",
    "watch:dev": "nodemon"
  },
  "dependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^16.0.3",
    "express": "^4.19.2",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "pg": "^8.10.0",
    "pg-promise": "^11.4.3",
    "rimraf": "^5.0.0",
    "sequelize": "^6.31.0",
    "sequelize-cli": "^6.6.0",
    "serialport": "^10.5.0",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "node-env-run": "^4.0.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
